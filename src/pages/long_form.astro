---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
import { sortByDate } from "../components/sortbydate";
const pageTitle = "Long Form";
const allLong_form = await getCollection("long_form");
---

<BaseLayout title={pageTitle} is404Page={false}>
  {
    allLong_form
      .sort(sortByDate)
      .map((post) => (
        <BlogPost
          url={`/long_form/${post.id}/`}
          image={post.data?.image?.src || ""}
          alt={post.data?.image?.alt || ""}
          title={post.data?.title || ""}
          description={post.data?.description || ""}
          pubDate={post.data?.pubDate || ""}
          positionx={post.data?.image?.positionx || ""}
          positiony={post.data?.image?.positiony || ""}
        />
      ))
  }
</BaseLayout>
