---
import BaseLayout from "../layouts/BaseLayout.astro";
import Prose from "../components/Prose.astro";
const pageTitle = "404: Page Not Found";
const subTitle = "But Ron Burgundy Found You";
const question = "Or did you find Ron Burgundy?";
---

<BaseLayout title={pageTitle} is404Page={true}>
  <Prose>
    <div class="space-y-8 py-8">
      <header class="text-center space-y-4">
        <h1
          class="font-overpass-mono text-4xl text-gray-900 dark:text-[rgb(245,245,245)]"
        >
          {pageTitle}
        </h1>
        <div class="space-y-2">
          <h2
            class="font-overpass-mono text-2xl text-gray-700 dark:text-gray-300"
          >
            {subTitle}
          </h2>
          <p
            class="font-overpass-mono text-sm italic text-gray-500 dark:text-gray-400"
          >
            {question}
          </p>
        </div>
      </header>

      <div
        class="bg-gray-100 dark:bg-[rgb(40,39,43)] rounded-lg p-6 shadow-[inset_0_4px_6px_-1px_rgba(0,0,0,0.1),inset_0_2px_4px_-1px_rgba(0,0,0,0.06)] dark:shadow-[inset_0_4px_6px_-1px_rgba(0,0,0,0.3),inset_0_2px_4px_-1px_rgba(0,0,0,0.18)]"
      >
        <div class="h-[200px] flex items-center justify-center">
          <p
            id="quote"
            class="text-gray-800 dark:text-[rgb(230,230,230)] italic text-center w-full"
          >
          </p>
        </div>
      </div>

      <div
        class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4"
      >
        <button
          id="getQuoteBtn"
          class="bg-blue-600 hover:bg-blue-700 dark:bg-blue-800 dark:hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-sm transition duration-300 ease-in-out"
        >
          Get Ron's Wisdom
        </button>
        <a
          href="/"
          class="bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-800 dark:hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-sm inline-block no-underline transition duration-300 ease-in-out text-center"
          data-astro-reload
        >
          Go to Pleasure Town (Home)
        </a>
      </div>
    </div>
  </Prose>
</BaseLayout>

<script src="../scripts/burgundy.js"></script>
