---
interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;
---

<section id={id} class="mb-6 cv-section">
  <h2 class="text-2xl font-semibold text-blue-800 dark:text-blue-400 pb-2 border-b border-slate-200 dark:border-slate-700 mb-4 page-break-after-avoid">
    {title}
  </h2>
  <div class="cv-section-content page-break-before-avoid">
    <slot />
  </div>
</section>

<style>
  @media print {
    .page-break-after-avoid {
      page-break-after: avoid !important;
    }
    
    .page-break-before-avoid {
      page-break-before: avoid !important;
    }
    
    /* Ensure the first company after a section heading stays with the heading */
    .cv-section-content > :first-child {
      page-break-before: avoid !important;
    }
    
    /* More specific rules to keep section headers with their content */
    h2 + .cv-section-content {
      page-break-before: avoid !important;
    }
  }
</style>