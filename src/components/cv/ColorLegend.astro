---
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<div class={`duration-legend flex flex-wrap gap-2 items-center text-xs text-slate-600 dark:text-slate-400 ${className}`}>
  <span class="mr-1">Duration:</span>
  <div class="flex items-center gap-1">
    <span class="inline-block w-3 h-3 rounded-full bg-amber-400 dark:bg-amber-500"></span> 
    <span>&lt;1 year</span>
  </div>
  <div class="flex items-center gap-1">
    <span class="inline-block w-3 h-3 rounded-full bg-blue-500 dark:bg-blue-400"></span> 
    <span>1-2 years</span>
  </div>
  <div class="flex items-center gap-1">
    <span class="inline-block w-3 h-3 rounded-full bg-green-500 dark:bg-green-400"></span> 
    <span>2-4 years</span>
  </div>
  <div class="flex items-center gap-1">
    <span class="inline-block w-3 h-3 rounded-full bg-purple-500 dark:bg-purple-400"></span> 
    <span>4+ years</span>
  </div>
</div>

<style>
  @media print {
    .duration-legend {
      display: none;
    }
  }
</style>