---
interface Props {
  name: string;
  hideHeading?: boolean;
}

const { name, hideHeading = false } = Astro.props;
---

<div class="company-section">
  {!hideHeading && (
    <h3 class="text-2xl font-bold text-blue-900 dark:text-blue-300 mb-4">
      <span class="company-name">{name}</span>
    </h3>
  )}
  <div class="company-positions">
    <slot />
  </div>
</div>

<style>
  @media print {
    .company-section {
      page-break-inside: avoid !important;
      break-inside: avoid !important;
    }
    
    /* At least keep the company name with its first position */
    h3 {
      page-break-after: avoid !important;
      break-after: avoid !important;
    }
    
    .company-positions > :first-child {
      page-break-before: avoid !important;
      break-before: avoid !important;
    }
  }
</style>